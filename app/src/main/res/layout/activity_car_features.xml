<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:context=".CarGarageActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/nav_view_v2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/page_main">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/page_title"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/navMenuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="menuicon"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/menu"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/activityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:fontFamily="@font/staatliches"
                android:textColor="@color/title_text"
                android:text="Features"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"/>

            <LinearLayout
                android:id="@+id/alertsIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/navbar_alert_icon2"
                    android:contentDescription="notificationIcon"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/page_dividing_view"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"/>

        <LinearLayout
            android:id="@+id/carNameContainer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/carName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VOLKSVAGEN POLO"
                    android:gravity="center"
                    android:textSize="26dp"
                    android:fontFamily="@font/manjari"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/carNameUnderline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/text_underline"
                    android:layout_marginTop="-1dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/carNameContainer"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/license_plate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="License plate"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@id/carPlate"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="AB626SS"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_design_cardoors"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Number of car doors"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carDoors"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="3"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_design_carweight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Car weight"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="1567 Kg"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_design_carseats"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Number of car seats"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carSeats"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="3"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_design_abs"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Assistance system"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="ABS"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_design_gears"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Number of gears"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carGears"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="8"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_engine_fuellevel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Consumption"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carConsumptionData"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="13.1l/100Km"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_engine_emissions"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="CO2 Avg emissions"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carEmissions"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="331g/1Km"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_engine_horsepower"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Engine horsepower"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/engineHP"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="305 CV"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_engine_acceleration"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Acceleration 0-100"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/carAccelleration"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="6.8s"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/fuelLevelImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stats_engine_fuellevel"/>

                <TextView
                    android:id="@+id/fuelLevelTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:padding="5dp"
                    android:paddingStart="24dp"
                    android:text="Fuel level"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/fuelLevelActual"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:gravity="end"
                    android:text="67%"
                    android:textColor="@color/normal_text"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bordo divisore Main - Navbar -->
        <View
            android:id="@+id/bottomView"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/page_dividing_view"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavbar" />

        <!-- Navbar -->
        <LinearLayout
            android:id="@+id/bottomNavbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/page_bottom_navbar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="4">

            <!-- Tasto Garage -->
            <LinearLayout
                android:id="@+id/garageButtonContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/garageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_garage_icon2" />

                <TextView
                    android:id="@+id/garageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="GARAGE"
                    android:textColor="@color/bottom_navbar_text" />
            </LinearLayout>

            <!-- Tasto Manage -->
            <LinearLayout
                android:id="@+id/manageButtonContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/manageIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_manage_icon2" />

                <TextView
                    android:id="@+id/manageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="MANAGE"
                    android:textColor="@color/bottom_navbar_text" />
            </LinearLayout>

            <!-- Tasto Map -->
            <LinearLayout
                android:id="@+id/mapButtonContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/mapIcon"
                    android:layout_width="28dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_map_icon2" />

                <TextView
                    android:id="@+id/mapText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="MAP"
                    android:textColor="@color/bottom_navbar_text" />
            </LinearLayout>

            <!-- Tasto Features -->
            <LinearLayout
                android:id="@+id/featuresButtonContainer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/featuresIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_stats_icon2" />

                <TextView
                    android:id="@+id/featuresText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="FEATURES"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_navbar_text" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>
