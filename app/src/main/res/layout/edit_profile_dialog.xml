<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center"
    android:backgroundTint="#EDE0D4"
    android:layout_marginStart="14dp"
    android:layout_marginEnd="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textSize="24dp"
                android:textColor="@color/black"
                android:layout_weight="3"/>

            <ImageButton
                android:id="@+id/closeDialog"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/close_icon"
                android:backgroundTint="#EDE0D4"
                android:contentDescription="closeDialog"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Username"
                android:background="@color/platinum"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/black"
            app:hintTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Email"
                android:background="@color/platinum"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/black"
            app:endIconTint="@color/black"
            app:helperTextTextColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Password"
                android:inputType="textPassword"
                android:background="@color/platinum"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/black"
            android:textColorHint="@color/black"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repeat New Password"
                android:inputType="textPassword"
                android:background="@color/platinum"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:layout_weight="3"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/default_profile_pic"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="#4CAF50"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic1"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_pic_2"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_pic_3"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:weightSum="3">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_pic_4"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic4"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_pic_5"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic5"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/profile_pic_6"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:civ_border_color="@color/black"
                app:civ_border_width="1dp"
                android:layout_weight="1"
                android:contentDescription="pic6"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#66BB6A"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            app:iconSize="24dp"
            app:icon="@drawable/edit_profile_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:layout_marginTop="36dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
