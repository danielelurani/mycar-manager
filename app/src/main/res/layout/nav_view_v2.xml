<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:theme="@style/NavigationView"
    android:background="@color/page_left_navbar"
    android:layout_gravity="start"
    app:itemTextColor="@color/black"
    app:itemIconTint="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/page_title"
            android:paddingTop="48dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navbarProfilePic"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/default_profile_pic"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/black"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/navBarUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daniele"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="12dp"/>

            <TextView
                android:id="@+id/navbarEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="daniele@tiscali.it"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:paddingStart="12dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/page_dividing_view"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pages"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Garage"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/navbar_garage_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Manage"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/navbar_manage_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Map"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/navbar_map_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Features"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/navbar_stats_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_underline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Account"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/sidebar_account"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="New Car Set-Up"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/garage_addcar_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Color Correction"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/sidebar_colourblind"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/page_title"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/page_dividing_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Logout"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                app:icon="@drawable/logout_icon"
                app:iconTint="@color/black"
                app:iconSize="24dp"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.navigation.NavigationView>