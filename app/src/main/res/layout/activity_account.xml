<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:context=".AccountActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/nav_view_v2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/page_main">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/page_title"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/navMenuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="menuicon"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/menu"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:fontFamily="@font/staatliches"
                android:textColor="@color/title_text"
                android:text="Account"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="3"/>

            <LinearLayout
                android:id="@+id/alertsIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/notification"
                    android:contentDescription="notificationIcon"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/page_dividing_view"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="196dp"
            android:layout_height="196dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginTop="36dp"
            android:src="@drawable/default_profile_pic"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:layout_marginTop="36dp"
            app:boxStrokeColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePic">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_main"
                android:enabled="false"
                android:hint="Username"
                android:inputType="none"
                android:paddingStart="0dp"
                android:paddingBottom="0dp"
                android:text="Danielinho45"
                android:fontFamily="@font/manjari"
                android:textColor="@color/normal_text"
                android:textColorHint="@color/hint_text"
                android:textSize="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:layout_marginTop="36dp"
            app:boxStrokeColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="20dp"
                android:hint="Email"
                android:text="daniele@tiscali.it"
                android:fontFamily="@font/manjari"
                android:textColor="@color/normal_text"
                android:textColorHint="@color/hint_text"
                android:background="@color/page_main"
                android:inputType="none"
                android:paddingStart="0dp"
                android:paddingBottom="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:layout_marginTop="36dp"
            app:boxStrokeColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textSize="20dp"
                android:hint="Password"
                android:text="askjlfhahf239879"
                android:fontFamily="@font/manjari"
                android:textColor="@color/normal_text"
                android:textColorHint="@color/hint_text"
                android:background="@color/page_main"
                android:inputType="textPassword"
                android:paddingStart="0dp"
                android:paddingBottom="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20dp"
            android:fontFamily="@font/staatliches"
            android:textColor="@color/normal_text"
            android:backgroundTint="@color/edit_button"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            app:iconSize="24dp"
            app:icon="@drawable/edit_profile_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="20dp"
            android:fontFamily="@font/staatliches"
            android:textColor="@color/normal_text"
            android:textAllCaps="false"
            android:backgroundTint="@color/not_ok_button"
            app:cornerRadius="10dp"
            app:strokeWidth="1dp"
            app:icon="@drawable/logout_icon"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editProfileButton"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/page_dividing_view"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/page_bottom_navbar"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_garage_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="GARAGE"
                    android:textColor="@color/bottom_navbar_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_manage_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="MANAGE"
                    android:textColor="@color/bottom_navbar_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_map_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="MAP"
                    android:textColor="@color/bottom_navbar_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/navbar_stats_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/manjari"
                    android:text="FEATURES"
                    android:textColor="@color/bottom_navbar_text" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>

