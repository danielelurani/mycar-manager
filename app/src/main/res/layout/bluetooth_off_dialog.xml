<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="?attr/mainBackground"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="355dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bluetooth is off!"
            android:textSize="36dp"
            android:gravity="center"
            android:fontFamily="@font/staatliches"
            android:textColor="?attr/notOkBtnBackground"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="-15dp"
            android:src="@drawable/line02"
            app:tint="@color/not_ok_button"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Turn Bluetooth ON in order to continue!"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/manjari"
            android:textColor="@color/normal_text"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeDialogButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/ok_button"
            android:fontFamily="@font/staatliches"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/normal_text"
            android:textSize="20dp"
            android:visibility="visible"
            app:cornerRadius="10dp"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeWidth="1dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
