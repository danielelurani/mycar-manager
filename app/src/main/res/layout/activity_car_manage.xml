<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_car_manage"
    android:background="#EDE0D4">

    <!-- Titolo della pagina -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#DDB892"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tasto sidebar -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/menu"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <!-- Titolo -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="MANAGE"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="3"/>

        <!-- Tasto Alert -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bell"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <!-- Bordo divisore Titolo - Main -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#B08968"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout" />

    <!-- Main -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id = "@+id/Everything"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <!-- other actual layout stuff here EVERYTHING HERE -->

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/black_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="black_circle_background" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/overlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:src="@drawable/white_circle"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="white_circle_background"
                    android:layout_marginTop="-5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/overlay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="270dp"
                    android:layout_marginTop="-11dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:contentDescription="dodge_img"
                    android:focusable="true"
                    android:src="@drawable/car_dodge_img" />

            </LinearLayout>
        </FrameLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginTop="-30dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="[ AB123CD ]"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="DODGE CHALLENGER"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>


            <!--
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_marginTop="32.5dp"
                android:layout_marginBottom="24dp"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                android:background="@drawable/layout_border_v2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/manage_ac"
                    android:layout_margin="5dp"/>

            </LinearLayout>
            -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_gravity="center"
                android:src="@drawable/chevron_left"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="leftstats" />

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/car_function"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:id = "@+id/car_function2"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/layout_border_v3">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/manage_on"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="black_circle_background" />

                </LinearLayout>
            </FrameLayout>

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_gravity="center"
                android:src="@drawable/chevron_right"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="rightstats" />

        </LinearLayout>
            <!--
            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_marginTop="32.5dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                android:background="@drawable/layout_border_v2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/manage_carwindow"
                    android:layout_margin="5dp"/>

            </LinearLayout>
            -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="POWER ON"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:background="@drawable/layout_border_v3"
            android:layout_gravity="center"
            android:backgroundTint="#449e48">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:gravity="center"
                android:layout_weight="1"
                android:alpha="0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ON"
                android:textSize="35sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Bordo divisore Main - Navbar -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#B08968"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3" />

    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#7F5539"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="4">

        <!-- Tasto Garage -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/navbar_garage_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GARAGE"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        </LinearLayout>


        <!-- Tasto Manage -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/navbar_manage_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGE"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        </LinearLayout>


        <!-- Tasto Map -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/navbar_map_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAP"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        </LinearLayout>


        <!-- Tasto Features -->
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/navbar_stats_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEATURES"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>